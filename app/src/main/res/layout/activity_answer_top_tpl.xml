<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="313.9dp"
        android:layout_height="53.8dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="17.3dp"
        android:layout_marginBottom="22.1dp"
        android:background="@drawable/radius_bg_session"
        android:paddingLeft="12.5dp">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题：先有鸡还是先有蛋？"
            android:textColor="@color/text_bg66"
            android:textSize="13.4sp"/>

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015-12-13  9:00"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_bg90"
            android:textSize="12.5sp"/>
    </LinearLayout>
</LinearLayout>