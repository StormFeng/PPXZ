<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_bg"
            android:orientation="vertical"
            android:padding="11.5dp">

           <TextView
               android:layout_width="match_parent"
               android:padding="7.7dp"
               android:layout_height="wrap_content"
               android:text="请将您的物业地址填写到以下表格，我们将会马上与您联系！"
               android:textColor="#FF40B260"
               android:textSize="13.4sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的手机号码是"
                    android:textColor="@color/text_bg90"
                    android:textSize="13.4sp"/>

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.6dp"
                    android:text=""
                    android:textColor="@color/text_bg60"
                    android:textSize="15.4sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.5dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请填写您的物业地址"
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>

                <EditText
                    android:id="@+id/edit_et"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_radius_bg"
                    android:gravity="left|top"
                    android:hint="请填写您的物业地址，比如：广州市天河区2路86号"
                    android:inputType="textMultiLine"
                    android:padding="9dp"
                    android:textColor="#FFB0B0B0"
                    android:textSize="13.4sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:minWidth="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/reset_bg"
                android:gravity="center"
                android:text="投递"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>