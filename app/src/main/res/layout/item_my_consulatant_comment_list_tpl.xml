<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"

              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="19.2dp"
        android:paddingLeft="11.5dp"
        android:paddingRight="12dp"
        android:paddingTop="19.2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="84.5dp"
                android:layout_height="84.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <midian.baselib.widget.CircleImageView
                        android:id="@+id/head_cv"
                        android:layout_width="28.8dp"
                        android:layout_height="28.8dp"
                        android:background="@drawable/head1"/>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.4dp"
                        android:layout_weight="1"
                        android:text="姓名"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:id="@+id/to_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_comment_frame_bg"
                        android:padding="5dp"
                        android:text="去评价"
                        android:textColor="#FFE33E3E"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14.4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_house"/>


                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.5dp"
                        android:layout_weight="1"
                        android:text="725m²独层望江写字楼"
                        android:textColor="@color/text_bg60"
                        android:textSize="13.4sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.8dp"
                    android:gravity="right"
                    android:text="2015-11-20"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="7.7dp"
                android:background="@color/divide_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="我的评价"
                android:textColor="#FFE56032"
                android:textSize="13.4sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rate_tv_1"
                    android:layout_width="34.6dp"
                    android:layout_height="19.2dp"
                    android:background="#FFF77F7F"
                    android:gravity="center"
                    android:text="好评"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/content_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:text="对顾问：人很不错，楼也好，强烈推荐！"
                    android:textColor="@color/text_bg60"
                    android:textSize="13.4sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rate_tv_2"
                    android:layout_width="34.6dp"
                    android:layout_height="19.2dp"
                    android:background="#FFF77F7F"
                    android:gravity="center"
                    android:text="好评"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/content_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:text="对载体：地段不错，楼下就有吃饭的地方超市都有"
                    android:textColor="@color/text_bg60"
                    android:textSize="13.4sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/window_bg"/>
</LinearLayout>