<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical"
            >

    <LinearLayout
        android:id="@+id/consultant_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="3.8dp"
        android:paddingRight="4.6dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168.2dp"
            android:layout_marginTop="7.7dp">
            <ImageView
                android:id="@+id/img_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_bg"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天河区珠江新城甲级写字楼"

                    android:textColor="@color/white"
                    android:textSize="17.3sp"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21.7dp"
                    android:background="@drawable/frame_bg"
                    android:text="155元/m2*月 起"
                    android:textColor="@color/white"
                    android:textSize="17.3sp"/>
            </LinearLayout>
        </RelativeLayout>

        <midian.baselib.widget.CircleImageView
            android:id="@+id/head_cv"
            android:layout_width="28.8dp"
            android:layout_height="28.8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8.4dp"
            android:background="@drawable/head1"/>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.6dp"
            android:gravity="center_horizontal"
            android:paddingLeft="19.2dp"
            android:paddingRight="28dp"
            android:text="写字楼推荐，在羊城广州唯一的CBD-珠江新城的中心地带，附近的便利及其城市的繁荣缩影，我喜欢这里，我期望在这里办公。"
            android:textColor="@color/text_bg20"
            android:textSize="13.4sp"/>
    </LinearLayout>
</LinearLayout>