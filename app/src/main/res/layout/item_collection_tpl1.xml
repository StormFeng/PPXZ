<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.7dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18.2dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:button="@drawable/c_checkbox"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="14.4dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13.4dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="86.4dp"
                android:layout_height="86.4dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13.4dp"
                android:layout_marginRight="11.5dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="0.9dp"
                android:paddingTop="2.9dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_weight="9.8"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="珠江新城725m²独层望江写字楼"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:minWidth="40dp"
                        android:padding="2dp"
                        android:text="写字楼"
                        android:textColor="@color/white"
                        android:textSize="11.5sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_salerental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFF8E67"
                        android:text="租"
                        android:gravity="center"
                        android:minWidth="23dp"
                        android:padding="1dp"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/white"
                        android:textSize="9.6sp"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="167元/m²·月 起"
                        android:textColor="@color/text_bg60"
                        android:textSize="11.5sp"/>

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.6dp"
                        android:text="待租售面积 7,908m²"
                        android:textColor="@color/text_bg60"
                        android:textSize="11.5sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/window_bg"/>
</LinearLayout>