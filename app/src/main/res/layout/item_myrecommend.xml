<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="14.4dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="20.2dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="52.2dp"
            android:gravity="center">
            <midian.baselib.widget.CircleImageView
                android:id="@+id/iv_title"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher"/>
            <midian.baselib.widget.CircleImageView
                android:id="@+id/iv_dot"
                android:layout_width="7.7dp"
                android:layout_height="7.7dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="40dp"
                android:src="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐客商"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="9.6sp"
                android:textColor="#FFF16666"
                android:background="#FFFFF4F4"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="2015-12-30 9:00"
            android:layout_marginTop="3.8dp"
            android:gravity="center"
            android:textSize="9.6sp"
            android:textColor="@color/text_bgb0"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="韩笑笑"
                    android:textSize="15.4sp"
                    android:textColor="@color/text_bg20"/>
                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="15.4dp"
                        android:layout_height="wrap_content"
                        android:text="已考察"
                        android:textSize="13.4sp"
                        android:textColor="@color/text_bg90"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赏金："
                            android:textSize="13.4sp"
                            android:textColor="@color/text_bg90"/>
                        <TextView
                            android:id="@+id/tv_moneynumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0"
                            android:textSize="13.4sp"
                            android:textColor="#FFAD09"/>
                    </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_booknumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：23415667899"
                android:textSize="13.4sp"
                android:layout_marginTop="13.8dp"
                android:textColor="@color/text_bg60"/>
            <TextView
                android:id="@+id/tv_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您推荐的客商已成功签约 市中心无噪音写字楼 ，成交面积2000㎡。"
                android:textSize="13.4sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_bg90"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_look"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看"
                    android:textColor="@color/text_bgb0"
                    android:textSize="13.4dp"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.9dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_arrow_down"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_state"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.4dp"
        android:layout_marginBottom="21.2dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.6dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"
                android:lines="2" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:lines="2"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"/>
            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:lines="2"
                android:text=""
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/tv_time4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:lines="2"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/icon_dot1"
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                android:src="@drawable/icon_dot"/>
            <ImageView
                android:id="@+id/iv_line1"
                android:layout_width="84dp"
                android:layout_height="1.9dp"
                android:src="@color/blue"/>
            <ImageView
                android:id="@+id/icon_dot2"
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                android:src="@drawable/icon_dot"/>
            <ImageView
                android:id="@+id/iv_line2"
                android:layout_width="84dp"
                android:layout_height="1.9dp"
                android:src="@color/blue"/>
            <ImageView
                android:id="@+id/icon_dot3"
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                android:src="@drawable/icon_dot"/>
            <ImageView
                android:id="@+id/iv_line3"
                android:layout_width="84dp"
                android:layout_height="1.9dp"
                android:src="@color/blue"/>
            <ImageView
                android:id="@+id/icon_dot4"
                android:layout_width="11.5dp"
                android:layout_height="11.5dp"
                android:src="@drawable/icon_dot"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.6dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"
                android:text="已预约"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"
                android:text="已考察"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"
                android:text="意向同意"/>

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/blue"
                android:text="已签约"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>