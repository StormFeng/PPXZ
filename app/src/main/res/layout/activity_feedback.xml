<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginTop="15.4dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="有什么建议需要反馈的呢？"
        android:textSize="15.4sp"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.4dp"
        android:paddingTop="12.5dp"/>
    <Button
        android:id="@+id/btn_commit"
        android:layout_width="210.2dp"
        android:layout_height="42.2dp"
        android:text="提交反馈"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="53.8dp"
        android:background="@drawable/radius_bg_light_bluesolid"/>
</LinearLayout>