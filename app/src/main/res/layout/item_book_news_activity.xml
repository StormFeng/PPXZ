<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingRight="11.5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="19.2dp"
            android:layout_height="19.2dp"
            android:src="@drawable/icon_notice"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:textSize="14.4sp"
            android:textColor="@color/text_bg20"
            android:text="您的预约失效了！"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42.2dp"
        android:layout_marginTop="9.4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.4sp"
            android:textColor="@color/text_bg60"
            android:text="您于2015年12月23号预约了 725m²望江写字楼 已被物业顾问 @赵默笙 取消。"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42.2dp"
        android:layout_marginTop="14.1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg60"
            android:text="2015-01-01 16:00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:drawableRight="@drawable/icon_right_arrow"
            android:drawablePadding="7.9dp"
            android:textColor="@color/text_bg90"
            android:text="进入预约查看"/>
    </LinearLayout>
</LinearLayout>