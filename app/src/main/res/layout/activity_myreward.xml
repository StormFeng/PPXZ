<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.2dp"
        android:gravity="center_vertical"
        android:background="@color/blue">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赏金总额：20000元（已支付:2000元）"
            android:textColor="@color/white"
            android:textSize="15.4sp"
            android:drawableLeft="@drawable/icon_reward_white"
            android:layout_marginLeft="24.5dp"
            android:drawablePadding="8.2dp"/>
    </LinearLayout>


    <midian.baselib.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>