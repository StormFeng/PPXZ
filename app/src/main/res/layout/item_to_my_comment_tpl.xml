<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11.5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="11.5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <midian.baselib.widget.CircleImageView
            android:id="@+id/head_cv"
            android:layout_width="43.2dp"
            android:layout_height="43.2dp"
            android:src="@drawable/head1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/text_bg20"
                    android:textSize="14.4sp"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"
                    android:background="#FFF77F7F"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2天前"
                android:textSize="11.5sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_bg90"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这个物业顾问人挺不错的，大家需要看办公室的可以多些找他，他手上很多楼源，今天看了很多，最后终于定了！"
                android:textSize="11.5sp"
                android:layout_marginTop="7.7dp"
                android:textColor="@color/text_bg90"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>