<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_talk"
            android:layout_toLeftOf="@+id/iv_port"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rectangle_blue_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我有些问题想要咨询一下 "
                android:textColor="@color/text_bg33"
                android:textSize="13.4sp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-12-13  9:00"
                android:textColor="@color/text_bg90"
                android:textSize="12.5sp"/>
        </LinearLayout>

        <midian.baselib.widget.CircleImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_port"
            android:layout_marginLeft="6dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>

</LinearLayout>