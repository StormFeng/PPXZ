<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/change_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/change_phone_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改手机号码"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/update_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="V1.0.0"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/tv_ask_count"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/radius_bg_red"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/back_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="意见反馈"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/share_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="分享好友"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/account_upgrade_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="账号升级"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line" />


            <LinearLayout
                android:id="@+id/feedback_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="投诉反馈"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line" />

            <LinearLayout
                android:id="@+id/help_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="帮助中心"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关于我们"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="210dp"
                android:layout_height="41.3dp"
                android:layout_gravity="center"
                android:layout_marginBottom="28.8dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/login_out_radius_bg"
                android:text="退出登录"
                android:textColor="#FFFFFFFF"
                android:textSize="17.3sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>