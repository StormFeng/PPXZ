<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11.5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u3000\u3000请将您的个人信息填写到以下表格，我们将马上与您联系！"
            android:lineSpacingExtra="5dp"
            android:textColor="#FF40B260"
            android:textSize="13.4sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="23.4dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg90"
                android:layout_marginTop="19.2dp"
                android:text="您的手机号码是"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.9dp"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg60"
                android:text=""/>

            <EditText
                android:id="@+id/et_number"
                android:layout_width="270.7dp"
                android:layout_height="34.6dp"
                android:layout_marginTop="17.5dp"
                android:gravity="center"
                android:textSize="13.4sp"
                android:background="@drawable/flow_layout_bg"
                android:textColor="@color/text_bgb0"
                android:layout_marginBottom="19.2dp"
                android:hint="请填写您的真实姓名"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="38.4dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="240dp"
            android:layout_height="34.6dp"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="15.4sp"
            android:background="@drawable/radius_bg_bluesolid"/>
    </LinearLayout>
</LinearLayout>