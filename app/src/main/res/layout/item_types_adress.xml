<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/window_bg"
              android:orientation="vertical"
              android:padding="4.8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.7dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="197.8dp">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.7dp"
                android:background="#FF4AB3F5"
                android:paddingBottom="2dp"
                android:paddingLeft="11.5dp"
                android:paddingRight="11.5dp"
                android:paddingTop="2dp"
                android:text="出租"
                android:textColor="@color/white"
                android:textSize="16.3sp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginTop="29.7dp"
                android:gravity="center"
                android:text="天河区5万平米"
                android:textColor="@color/white"
                android:textSize="19.2sp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:background="@drawable/frame_bg"
                android:text="150元/m²·月 起"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="15.4dp"
                android:layout_below="@+id/price"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="14.3dp"
                    android:text="天河区"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14.3dp"
                    android:text="园区"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/has_enter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="9.6dp"
            android:paddingRight="9.6dp" >

            <LinearLayout
                android:id="@+id/has_enter_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <midian.baselib.widget.CircleImageView
                    android:id="@+id/head"
                    android:layout_width="36.5dp"
                    android:layout_height="36.5dp"
                    android:background="@drawable/head1"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.5dp"
                    android:layout_weight="1"
                    android:text="姓名 | 男 | 物业顾问"
                    android:textColor="@color/text_bg20"
                    android:textSize="13.4sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/has_list"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/booking"
                android:layout_width="95dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/frame_booking_bg"
                android:text="立即预约"
                android:textColor="#FF51BBFA"
                android:textSize="13.4sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>