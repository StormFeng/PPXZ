<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="11.5dp">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/default_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="725m²独层望江写字楼"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF51BBFA"
                    android:padding="3dp"
                    android:text="写字楼"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>
            </LinearLayout>

            <midian.baselib.widget.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:id="@+id/rent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFF8E67"
                    android:padding="3dp"
                    android:text="租"
                    android:textColor="@color/white"
                    android:textSize="9.6sp"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.6dp"
                    android:layout_weight="1"
                    android:text="155元/m²·月 起"
                    android:textColor="@color/text_bg60"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待租售面积 7000m²"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sell_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/area_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土地面积 7000m²"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/describe_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.6dp"
                    android:layout_weight="1"
                    android:text="155元/m²·月 起"
                    android:textColor="@color/text_bg60"
                    android:textSize="11.5sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>