<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <midian.baselib.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

   <LinearLayout
        android:id="@+id/ll_ask"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#FF51BBFA"
        android:layout_height="47dp">
        <TextView
            android:id="@+id/tv_ask"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="#FF51BBFA"
            android:drawableLeft="@drawable/icon_free_ask"
            android:drawablePadding="10.6dp"
            android:text="咨询会话(免费)"
            android:textSize="15.4sp"
            android:textColor="@color/white"
            android:gravity="center"/>
   </LinearLayout>

    <midian.baselib.widget.BaseLibTopbarView
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"/>
</RelativeLayout>