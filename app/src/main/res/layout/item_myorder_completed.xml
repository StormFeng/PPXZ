<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                  android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="#FFFCFCFC"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_line"/>
        <TextView
            android:id="@+id/tv_booknumber"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:textSize="15.4sp"
            android:textColor="@color/text_bg90"
            android:text="订单号\u30009234123340013445"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/divider_line"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="75.8dp"
        android:layout_margin="11.5dp"
        android:background="#FFFAFAFA"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="58.6dp"
            android:layout_height="58.6dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_bg"
            android:layout_margin="9.6dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63.4dp"
            android:layout_marginRight="11.5dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15.4sp"
                android:textColor="@color/text_bg20"
                android:text="725m²独层望江写字楼"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="45dp"
                android:padding="3dp"
                android:textSize="11.5sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="写字楼"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.5sp"
                    android:textColor="#FFFB8A4F"
                    android:text="ID"/>
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="11.5sp"
                    android:layout_marginLeft="7.6dp"
                    android:textColor="@color/text_bg60"
                    android:text="P-GZHD-00013"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16.3dp"
        android:paddingRight="16.3dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8.6dp"
            android:paddingBottom="8.6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <midian.baselib.widget.CircleImageView
                android:id="@+id/iv_portrait"
                android:layout_width="28.8dp"
                android:layout_height="28.8dp"
                android:src="@drawable/ic_launcher" />
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg60"
                android:text="张大寒"/>
            <View
                android:layout_width="1.9dp"
                android:layout_height="17.3dp"
                android:background="@drawable/divider_line"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.3dp"
                android:textSize="13.4sp"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="11.5dp"
                android:textColor="@color/text_bg90"
                android:text="13800138000"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:paddingTop="8.6dp"
            android:paddingBottom="8.6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg90"
                android:text="创建时间：2015-12-23 9:00"/>
            <View
                android:layout_width="1.9dp"
                android:layout_height="17.3dp"
                android:layout_marginLeft="13.7dp"
                android:background="@drawable/divider_line"/>
            <Button
                android:id="@+id/btn_lookContract"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@null"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:textSize="13.4sp"
                android:textColor="#FF0076FF"
                android:text="查看合同"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:paddingTop="8.6dp"
            android:paddingBottom="8.6dp"
            android:background="#FFFCFCFC"
            android:layout_marginBottom="7.7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="48dp"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg90"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_reward"
                android:text="未打赏"/>
            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="48dp"
                android:textSize="15.4sp"
                android:textColor="#FFEB6363"
                android:text="未打赏"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/window_bg"/>
</LinearLayout>