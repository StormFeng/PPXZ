<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="11.5dp">

        <ImageView
            android:id="@+id/img_iv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="9.6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carrier_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="载体标题"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF51BBFA"
                    android:minWidth="40dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="类型的"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>
            </LinearLayout>

            <midian.baselib.widget.FlowLayout
                android:id="@+id/lable_flow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/rent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="9.6dp"
                android:layout_marginTop="5.4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFF8E67"
                    android:text="租"
                    android:gravity="center"
                    android:layout_marginRight="5.5dp"
                    android:minWidth="23dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="9.6sp"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="元/m²·月 起"
                    android:textColor="@color/text_bg60"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/list_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待租售面积 m²"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>