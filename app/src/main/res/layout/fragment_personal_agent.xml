<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <midian.baselib.widget.BaseLibTopbarView
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/personalData_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15.4dp">

                <midian.baselib.widget.CircleImageView
                    android:id="@+id/head"
                    android:layout_width="61.4dp"
                    android:layout_height="61.4dp"
                    android:background="@drawable/ic_launcher"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15.4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="林若曦"
                            android:textColor="@color/text_bg20"
                            android:textSize="17.3sp"/>

                        <TextView
                            android:layout_width="54.7dp"
                            android:layout_height="16.3dp"
                            android:layout_marginLeft="10.4dp"
                            android:background="@color/blue"
                            android:gravity="center"
                            android:text="物业顾问"
                            android:textColor="@color/white"
                            android:textSize="11.5sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13.7dp"
                        android:text="手机号:138****8000"
                        android:textColor="@color/text_bg20"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="7.7dp"
                    android:layout_height="13.4dp"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73.9dp"
                android:background="#FFEEEEEE">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/text_bg60"
                        android:textSize="19.2sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.7dp"
                        android:text="预约数"
                        android:textColor="@color/text_bgb0"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥4,932"
                        android:textColor="#FFE67E22"
                        android:textSize="19.2sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.7dp"
                        android:text="预约数"
                        android:textColor="@color/text_bgb0"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥1,300"
                        android:textColor="#FFE67E22"
                        android:textSize="19.2sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.7dp"
                        android:text="预约数"
                        android:textColor="@color/text_bgb0"
                        android:textSize="13.4sp"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/tv_personalpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_personal_page"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="个人主页"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_my_booking"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="我的预约"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_myrsources"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="我的盘源"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/tv_myorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_myorder"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="我的订单"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_myevaluate"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="消息"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_myevaluate"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="我的评价"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.4dp"
                android:background="@drawable/default_button"
                android:drawableLeft="@drawable/icon_setting"
                android:drawablePadding="16.3dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:tag="1"
                android:text="我的评价"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
