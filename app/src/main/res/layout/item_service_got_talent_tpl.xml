<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
       android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <midian.baselib.widget.CircleImageView
                android:id="@+id/head_cv"
                android:layout_width="28.8dp"
                android:layout_height="28.8dp"
                android:background="@drawable/head1"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.4dp"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@color/text_bg20"
                android:textSize="15.4sp"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.5dp"
                android:text="2015-11-20"
                android:textColor="@color/text_bg90"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/to_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_comment_frame_bg"
                android:padding="5dp"
                android:text="去评价"
                android:textColor="#FFE33E3E"
                android:textSize="13.4sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:background="#FFF5F5F5"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:paddingTop="8.6dp"
            android:paddingBottom="10dp"
            android:text="问题：办公室前几天刚刚装修，有没有什么好的办法能够去除甲醛？"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>
        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="7.7dp"
                android:background="@color/divide_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="我的评价"
                android:textColor="#FFE56032"
                android:textSize="13.4sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rate_tv"
                    android:layout_width="34.6dp"
                    android:layout_height="19.2dp"
                    android:background="#FFF77F7F"
                    android:gravity="center"
                    android:text="好评"
                    android:textColor="@color/white"
                    android:textSize="11.5sp"/>
                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_bg60"
                    android:textSize="13.4sp"
                    android:layout_marginLeft="11.5dp"
                    android:text="人很不错，很尽心地帮我回答这个问题，虽然答案不如我所想的"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>