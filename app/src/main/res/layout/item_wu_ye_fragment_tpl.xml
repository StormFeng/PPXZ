<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="21dp"
        android:paddingLeft="11.5dp"
        android:paddingRight="11.5dp"
        android:paddingTop="23dp">

        <midian.baselib.widget.CircleImageView
            android:layout_width="43.2dp"
            android:layout_height="43.2dp"
            android:background="@drawable/head1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="赵雷"
                    android:textColor="@color/text_bg20"
                    android:textSize="14.4sp"/>

                <ImageView
                    android:layout_width="13.4dp"
                    android:layout_height="14.4dp"
                    android:background="@drawable/zan_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.2dp"
                    android:text="赵雷"
                    android:textColor="@color/text_bg90"
                    android:textSize="14.4sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2天前"
                android:textColor="@color/text_bg90"
                android:textSize="11.5sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.7dp"
                android:text="这个园区环境优美，大城市里少有的静怡办公场所，绿化达到90%，实为企业居家必备。
"
                android:textColor="@color/text_bg60"
                android:textSize="14.4sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>
</LinearLayout>