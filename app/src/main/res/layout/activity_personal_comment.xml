<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="11.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11.5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="11.5dp"
                android:paddingLeft="9.6dp"
                android:paddingRight="11.5dp"
                android:paddingTop="9.6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="63.4dp"
                        android:layout_height="63.4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="63.4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="725m²独层望江写字楼"
                                android:textColor="@color/text_bg20"
                                android:textSize="15.4sp"/>

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@color/blue"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text="写字楼"
                                android:textColor="@color/white"
                                android:textSize="11.5sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19.6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_salerental"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FFFF8E67"
                                android:padding="3dp"
                                android:text="租"
                                android:textColor="@color/white"
                                android:textSize="9.6sp"/>

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7.6dp"
                                android:layout_weight="1"
                                android:text="130元/m²·月 起"
                                android:textColor="@color/text_bg60"
                                android:textSize="11.5sp"/>

                            <TextView
                                android:id="@+id/tv_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7.6dp"
                                android:text="待租售面积 7,230m²"
                                android:textColor="@color/text_bg60"
                                android:textSize="11.5sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8.6dp"
                    android:background="@color/divide_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <CheckBox
                        android:id="@+id/cb_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="19.2dp"
                        android:background="@drawable/c_checkbox1"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="好评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>

                    <CheckBox
                        android:id="@+id/cb_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/c_checkbox1"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="中评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>

                    <CheckBox
                        android:id="@+id/cb_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="19.2dp"
                        android:background="@drawable/c_checkbox1"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="差评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_to_carrier"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_radius_bg"
                    android:gravity="left|top"
                    android:hint="请填写您对载体的点评！"
                    android:inputType="textMultiLine"
                    android:padding="9dp"
                    android:textColor="#FFB0B0B0"
                    android:textSize="13.4sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13.4dp"
                    android:background="#FFFFF8EA"
                    android:orientation="vertical"
                    android:padding="13.4dp">

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="问题：你好"
                        android:textSize="15.45sp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="2016-05-27  09:14:03"
                        android:textSize="15.45sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14.4dp">

                    <midian.baselib.widget.CircleImageView
                        android:id="@+id/iv_portrait"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/head1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.4dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姓名"
                                android:textColor="@color/text_bg20"
                                android:textSize="15.45sp"/>
                            <TextView
                                android:id="@+id/position_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15.4dp"
                                android:text="职位"
                                android:textColor="#FA8A4F"
                                android:textSize="13.4sp"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.7dp"
                            android:text="广州找房有限公司"
                            android:textColor="@color/text_bg60"
                            android:textSize="15.45sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divide_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <CheckBox
                        android:id="@+id/cb_bot_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="19.2dp"
                        android:background="@drawable/my_appraise_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="好评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>

                    <CheckBox
                        android:id="@+id/cb_bot_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/my_appraise_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="中评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>

                    <CheckBox
                        android:id="@+id/cb_bot_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="19.2dp"
                        android:background="@drawable/my_appraise_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="差评"
                        android:textColor="@color/text_bg90"
                        android:textSize="13.4sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_to_agency"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="15.4dp"
                    android:layout_marginLeft="9.6dp"
                    android:layout_marginRight="11.5dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edit_radius_bg"
                    android:gravity="left|top"
                    android:hint="请填写您对物业顾问的点评！"
                    android:inputType="textMultiLine"
                    android:padding="9dp"
                    android:textColor="#FFB0B0B0"
                    android:textSize="13.4sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/reset_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15.4sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>