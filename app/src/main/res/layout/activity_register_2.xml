<?xml version="1.0" encoding="utf-8"?>
<midian.baselib.widget.BaseLibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical">
    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:src="@drawable/icon_2_2"
            android:layout_marginTop="40.3dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到PP选址"
            android:layout_marginTop="13.8dp"
            android:textColor="#FF51BBFA"
            android:textSize="15.4sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115.2dp"
        android:gravity="center"
        android:background="#ffffffff"
        android:layout_marginTop="38.8dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/camera"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57.6dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_marginLeft="32.6dp"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的昵称"
            android:layout_marginLeft="28.5dp"
            android:textColor="@color/text_bg90"
            android:background="#00ffffff"
            android:textSize="15.4sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57.6dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_marginLeft="32.6dp"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  男"
            android:drawableLeft="@drawable/icon_man_p"
            android:gravity="center_vertical"
            android:layout_marginLeft="28.5dp"
            android:textColor="@color/blue"
            android:textSize="15.4sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  女"
            android:drawableLeft="@drawable/icon_woman_n"
            android:gravity="center_vertical"
            android:layout_marginLeft="44.8dp"
            android:textColor="#FF9B9B9B"
            android:textSize="15.4sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="19.2dp"
            android:layout_height="19.2dp"
            android:layout_marginLeft="32.6dp"
            android:src="@drawable/umeng_socialize_switchimage_choose"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已阅读并同意"
            android:layout_marginLeft="9.6dp"
            android:textColor="@color/text_bg90"
            android:textSize="15.4sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《PP选址用户协议》"
            android:textColor="#FF2ECC71"
            android:textSize="15.4sp"/>
    </LinearLayout>
    <Button
        android:layout_width="192dp"
        android:layout_height="42.2dp"
        android:text="完成注册"
        android:textColor="@color/white"
        android:layout_marginTop="47.2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="61.5dp"
        android:background="@drawable/radius_bg_light_bluesolid"
        android:textSize="17.3sp"/>

</LinearLayout>
</midian.baselib.widget.BaseLibScrollView>