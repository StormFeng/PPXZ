<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14.4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <midian.baselib.widget.CircleImageView
            android:id="@+id/image_iv"
            android:layout_width="42.2dp"
            android:layout_height="42.2dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="9.6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="韩笑笑"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/position_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创意总监"
                    android:padding="3dp"
                    android:textColor="@color/orange_button"
                    android:textSize="11.5sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/isread_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="new"
                    android:layout_marginRight="7.6dp"
                    android:background="@drawable/radius_bg_light_greensolid"
                    android:textColor="@color/white"
                    android:padding="3dp"
                    android:textSize="9.6sp"/>

                <TextView
                    android:id="@+id/question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您好，有什么事可以帮到你的吗"
                    android:textSize="12.5sp"
                    android:textColor="@color/text_bg60"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow"/>
    </LinearLayout>
</LinearLayout>