<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_ID"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="11dp"
        android:gravity="center_vertical"
        android:background="#FFFCFCFC">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="@color/text_bg60"
            android:text="ID：P-GZHD-00001"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:textSize="15.4sp"
            android:textColor="@color/text_bg90"
            android:text="租赁情况"
            android:drawableRight="@drawable/icon_right_arrow"
            android:drawablePadding="9.8dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_line"/>
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="75.8dp"
        android:layout_margin="11.5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="63.4dp"
            android:layout_height="63.4dp"
            android:src="@drawable/default_bg"
            android:layout_margin="9.6dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63.4dp"
            android:layout_marginRight="11.5dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15.4sp"
                android:textColor="@color/text_bg20"
                android:text="725m²独层望江写字楼"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="写字楼"/>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_salerental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.5sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_marginRight="7.6dp"
                    android:textColor="@color/white"
                    android:background="#FFFF8E67"
                    android:text="租"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="11.5sp"
                    android:textColor="@color/text_bg60"
                    android:text="140元/m²·月 起"/>
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.5sp"
                    android:layout_marginLeft="7.6dp"
                    android:textColor="@color/text_bg60"
                    android:text="待租售面积 7,000m²"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_line"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="337dp"
        android:layout_height="32.6dp"
        android:text="查看驻守物业顾问"
        android:textColor="@color/blue"
        android:textSize="14.5dp"
        android:layout_marginTop="7.7dp"
        android:layout_marginBottom="7.7dp"
        android:layout_gravity="center"
        android:background="@drawable/radius_bg_bluestroke"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/window_bg"/>
</LinearLayout>