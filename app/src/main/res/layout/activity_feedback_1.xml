<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.4dp"
            android:paddingTop="13.4dp"
            android:paddingBottom="12.9dp"
            android:paddingLeft="14.4dp"
            android:paddingRight="14.4dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报类型"
                android:textColor="@color/text_bg20"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_bg20"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_right_arrow"
                android:drawablePadding="9.9dp"
                android:text="选择举报类型"
                android:textColor="@color/text_bg20"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_marginTop="14.4dp"
            android:background="@color/white"
            android:gravity="start"
            android:hint="请填写您想要投诉的理由！"
            android:textSize="15.4sp"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:paddingTop="12.5dp"/>
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14.4dp"
            android:background="@color/white"
            android:gravity="start"
            android:textSize="15.4sp"
            android:hint="请输入您的手机号/邮箱等(必填)"
            android:paddingLeft="15.4dp"
            android:paddingRight="15.4dp"
            android:paddingTop="14.4dp"
            android:paddingBottom="14.4dp"/>
        <Button
        android:id="@+id/btn_commit"
        android:layout_width="210.2dp"
        android:layout_height="42.2dp"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="53.8dp"
        android:background="@drawable/radius_bg_light_bluesolid"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>