<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:scrollbars="none">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/window_bg"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/head_ll"
                android:layout_width="match_parent"
                android:layout_height="76.8dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="7.7dp"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp"
                android:paddingTop="7.7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="头像"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/head_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="漂亮的你，暂无头像"
                    android:textColor="@color/text_bg20"
                    android:layout_marginRight="5dp"
                    android:textSize="15.4sp"/>
                <midian.baselib.widget.CircleImageView
                    android:id="@+id/head_iv"
                    android:layout_width="61.4dp"
                    android:layout_height="61.4dp"
                    android:layout_marginRight="7.7dp"
                    android:background="@drawable/head1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@color/divide_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- 姓名 -->
                <LinearLayout
                    android:id="@+id/name_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/default_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.4dp"
                    android:paddingRight="15.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7.7dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/text_bg90"
                        android:textSize="15.4sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_right_arrow"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divide_line"/>

                <!-- 性别 -->
                <LinearLayout
                    android:id="@+id/sex_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/default_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.4dp"
                    android:paddingRight="15.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7.7dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/text_bg90"
                        android:textSize="15.4sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_right_arrow"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divide_line"/>

                <!-- 地区 -->
                <LinearLayout
                    android:id="@+id/area_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/default_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.4dp"
                    android:paddingRight="15.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_bg90"
                        android:textSize="15.4sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divide_line"/>
                <!-- 身份证号 -->
                <LinearLayout
                    android:id="@+id/personalId_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/default_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15.4dp"
                    android:paddingRight="15.6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:textColor="@color/text_bg20"
                        android:textSize="15.4sp"/>

                    <TextView
                        android:id="@+id/personalid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_bg90"
                        android:textSize="15.4sp"/>
                </LinearLayout>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <!-- 中介公司 -->
            <LinearLayout
                android:id="@+id/company_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">
                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中介公司"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <!-- 分店 -->
            <LinearLayout
                android:id="@+id/store_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">
                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分店"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/store"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>

            <!-- 个人宣言 -->
            <LinearLayout
                android:id="@+id/declaration_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人宣言"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/declaration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <!-- 手机号码 -->
            <LinearLayout
                android:id="@+id/phone_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="15.4dp"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15.4dp"
                android:background="@color/divide_line"/>
            <!-- 支付信息 -->
            <LinearLayout
                android:id="@+id/pay_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付信息"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/payinfo_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:id="@+id/bankcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_bg90"
                    android:textSize="15.4sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>