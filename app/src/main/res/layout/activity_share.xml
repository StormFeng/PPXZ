<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_wechat"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="微信好友"
            android:textSize="15.4sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechat_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_frients"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="朋友圈"
            android:textSize="15.4sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_qzone"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="QQ空间"
            android:textSize="15.4sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_qq"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="QQ好友"
            android:textSize="15.4sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_weibo"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="新浪微博"
            android:textSize="15.4sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="23dp"
            android:drawableLeft="@drawable/dialog_share_bg_sms"
            android:drawablePadding="23dp"
            android:gravity="center_vertical"
            android:text="短信"
            android:textSize="15.4sp"/>
    </LinearLayout>


</LinearLayout>