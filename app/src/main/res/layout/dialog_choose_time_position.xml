<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306.2dp"
    android:layout_height="235.2dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/radius_bg_whitesolid"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.4dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.9dp"
            android:src="@drawable/icon_web_close"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:gravity="center"
            android:textColor="@color/text_bg20"
            android:text="设置碰面的时间地点"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32.6dp"
        android:layout_marginTop="23.5dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="32.6dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg60"
            android:text="日期"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="201.6dp"
            android:layout_height="match_parent"
            android:textSize="13.4sp"
            android:gravity="center_vertical"
            android:paddingLeft="12.5dp"
            android:drawableRight="@drawable/icon_right_arrow"
            android:drawablePadding="58.6dp"
            android:layout_marginLeft="18.1dp"
            android:lines="1"
            android:background="#FFFBFBFB"
            android:textColor="@color/text_bg60"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54.7dp"
        android:layout_marginTop="11.5dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="32.6dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg60"
            android:text="地点"/>
        <EditText
            android:id="@+id/et_position"
            android:layout_width="201.6dp"
            android:layout_height="match_parent"
            android:textSize="13.4sp"
            android:gravity="center_vertical"
            android:paddingLeft="12.5dp"
            android:layout_marginLeft="18.1dp"
            android:background="#FFFBFBFB"
            android:textColor="@color/text_bg60" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22.1dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="240dp"
            android:layout_height="34.6dp"
            android:text="确认"
            android:background="@drawable/radius_bg_bluesolid"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>