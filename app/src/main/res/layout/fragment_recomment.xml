<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="11.5dp"
              android:paddingRight="11.5dp"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="220dp"
                android:layout_height="166dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="106dp"
                    android:layout_height="79dp"
                    android:layout_marginLeft="6.7dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_bg"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="106dp"
                    android:layout_height="79dp"
                    android:layout_below="@+id/iv2"
                    android:layout_marginLeft="6.7dp"
                    android:layout_marginTop="6.7dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_bg"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="106dp"
                android:layout_height="79dp"
                android:layout_below="@+id/iv1"
                android:layout_marginTop="7.7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="106dp"
                android:layout_height="79dp"
                android:layout_below="@+id/iv1"
                android:layout_marginLeft="8.6dp"
                android:layout_marginTop="7.7dp"
                android:layout_toRightOf="@+id/iv6"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="106dp"
                android:layout_height="79dp"
                android:layout_below="@+id/iv1"
                android:layout_marginLeft="8.6dp"
                android:layout_marginTop="7.7dp"
                android:layout_toRightOf="@+id/iv5"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/summary_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.3dp"
        android:lineSpacingExtra="8dp"
        android:text="天河5万里智慧城基地位于天河智慧城核心区，园区占地面积3万㎡，总建筑面积5万㎡，是天河区十二五规划重点工程，华南地区首个云产业基地。       宏太智慧谷北靠群山，东邻智慧湖，园景、湖景、山景融为一体，自然环境优美。园区率先在华南地区引入风靡欧美的“绿脑办公”模式：推窗见绿、开门见景，绿化率达45%。宏太智慧谷以“整合Iaas资源，打造Paas平台。"
        android:textColor="#FF606060"
        android:textSize="14.4sp"/>


</LinearLayout>