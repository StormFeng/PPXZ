<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="11.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFAFA"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="117dp"
            android:layout_height="92dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="14.4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/height_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="层高：米"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>

                <TextView
                    android:id="@+id/area_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0m²"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/decorate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装修：精装"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:id="@+id/shang_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赏金：约"
                        android:textColor="@color/text_bg90"
                        android:textSize="11.5sp"/>
                    <TextView
                        android:id="@+id/shang_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/my_appraise"
                        android:textSize="11.5sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/m²"
                        android:textColor="@color/text_bg90"
                        android:textSize="11.5sp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/floor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼层： "
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFF8E67"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:padding="3dp"
                        android:text="售"
                        android:textColor="@color/white"
                        android:textSize="9.6sp"/>

                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.5dp"
                        android:text="0元/m²·月 起"
                        android:textColor="@color/text_bg90"
                        android:textSize="11.5sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>