<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="14.4dp"
        android:paddingTop="19.2dp"
        android:paddingRight="14.4dp">
        <midian.baselib.widget.CircleImageView
            android:id="@+id/iv_portrait_1"
            android:layout_width="28.8dp"
            android:layout_height="28.8dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_name_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="经纪：陈胜"
            android:textSize="13.4sp"
            android:layout_marginLeft="9.6dp"
            android:textColor="@color/text_bg20"/>
        <TextView
            android:id="@+id/tv_id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID：13199998886"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="14.4dp"
        android:paddingTop="9.6dp"
        android:paddingRight="14.4dp">
        <midian.baselib.widget.CircleImageView
            android:id="@+id/iv_portrait_2"
            android:layout_width="28.8dp"
            android:layout_height="28.8dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_name_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="客商：吴广"
            android:textSize="13.4sp"
            android:layout_marginLeft="9.6dp"
            android:textColor="@color/text_bg20"/>
        <TextView
            android:id="@+id/tv_id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID：13199998886"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="14.4dp"
        android:paddingTop="13.4dp"
        android:paddingRight="14.4dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_stage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已预约"
            android:textSize="13.4sp"
            android:textColor="#FFE56032"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-20 9:00"
            android:textSize="13.4sp"
            android:textColor="@color/text_bg90"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14.4dp"
        android:layout_marginRight="14.4dp"
        android:background="@color/window_bg"/>
</LinearLayout>