<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="259.2dp"
    android:layout_height="169dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/radius_bg_whitesolid"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#FF030303"
            android:text="修改手机号成功"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.4dp"
            android:textSize="13.4sp"
            android:textColor="#FF000000"
            android:layout_marginLeft="19.7dp"
            android:layout_marginRight="19.7dp"
            android:lineSpacingExtra="3dp"
            android:text="您已经绑定了新的手机号，原手机号将不再可用，请用新手机号登录"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24.2dp"
            android:background="@drawable/divider_line"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/btn_finish"
            android:layout_width="49dp"
            android:layout_height="23dp"
            android:text="知道了"
            android:background="@null"
            android:textColor="#FF037AFF"/>
    </LinearLayout>

</LinearLayout>