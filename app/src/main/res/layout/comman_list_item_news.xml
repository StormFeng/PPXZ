<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_button"
            android:drawableLeft="@drawable/icon_ask"
            android:drawablePadding="16.3dp"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:tag="1"
            android:text="咨询记录"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>
        <TextView
            android:id="@+id/tv_ask_count"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:padding="1dp"
            android:visibility="gone"
            android:textSize="8dp"
            android:layout_marginLeft="125dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:background="@drawable/radius_bg_red"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_booknews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_button"
        android:drawableLeft="@drawable/icon_news"
        android:drawablePadding="16.3dp"
        android:drawableRight="@drawable/icon_right_arrow"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:tag="1"
        android:text="预约消息"
        android:textColor="@color/text_bg20"
        android:textSize="15.4sp"/>
        <TextView
            android:id="@+id/tv_book_count"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:padding="1dp"
            android:visibility="gone"
            android:textSize="8dp"
            android:layout_marginLeft="125dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:background="@drawable/radius_bg_red"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>


    <midian.baselib.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/pullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>