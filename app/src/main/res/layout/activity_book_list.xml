<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                  android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.3dp"
        android:layout_marginTop="13.4dp"
        android:gravity="center_vertical"
        android:background="#FFFCFCFC">
        <TextView
            android:id="@+id/tv_booknumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:textSize="13.4sp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_bg90"
            android:text="订单号\u30009234123340013445"/>
        <TextView
            android:id="@+id/tv_isread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:padding="1dp"
            android:textSize="8dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/radius_bg_red"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_intention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13.4sp"
            android:padding="3dp"
            android:layout_marginRight="11.5dp"
            android:layout_centerVertical="true"
            android:textColor="#FFE56032"
            android:background="#FFFFF3ED"
            android:text="意向同意"/>
        <LinearLayout
            android:id="@+id/ll_statechange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_stateChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_dot_more"
                android:layout_marginRight="19.2dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="9.6dp"
            android:paddingBottom="11.5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="63.4dp"
                android:layout_height="63.4dp"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginRight="14.4dp"
                android:layout_marginLeft="11.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63.4dp"
                android:layout_marginRight="14.4dp"
                android:orientation="vertical">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.4sp"
                        android:textColor="@color/text_bg20"
                        android:text="725m²独层望江写字楼"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="11.5sp"
                        android:textColor="@color/white"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:text="写字楼"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/saleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9.6sp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="#FFFF8E67"
                        android:text="租"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="11.5sp"
                        android:layout_marginLeft="7.6dp"
                        android:textColor="@color/text_bg60"
                        android:text="130元/m²·月 起"/>
                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.5sp"
                        android:layout_marginLeft="7.6dp"
                        android:textColor="@color/text_bg60"
                        android:text="待租售面积 7,230m²"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16.3dp"
        android:paddingRight="16.3dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:paddingTop="13.4dp"
            android:paddingBottom="13.6dp"
            android:drawableLeft="@drawable/icon_time"
            android:drawablePadding="11.5dp"
            android:textColor="@color/text_bg90"
            android:text="16:00 (还有6小时19分)"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.4sp"
            android:paddingTop="13.4dp"
            android:paddingBottom="13.6dp"
            android:drawableLeft="@drawable/icon_position"
            android:drawablePadding="11.5dp"
            android:textColor="@color/text_bg90"
            android:text="广州市天河区珠江新城文思路128号文远大厦"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8.6dp"
            android:paddingBottom="8.6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <midian.baselib.widget.CircleImageView
                android:id="@+id/iv_portrait"
                android:layout_width="28.8dp"
                android:layout_height="28.8dp"
                android:src="@drawable/ic_launcher" />
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:textSize="13.4sp"
                android:textColor="@color/text_bg60"
                android:text="张大寒"/>
            <View
                android:layout_width="1.9dp"
                android:layout_height="17.3dp"
                android:background="@drawable/divider_line"/>
            <LinearLayout
                android:id="@+id/ll_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.3dp"
                    android:textSize="13.4sp"
                    android:drawableLeft="@drawable/icon_phone"
                    android:drawablePadding="11.5dp"
                    android:textColor="@color/text_bg90"
                    android:text="13800138000"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/window_bg"/>
</LinearLayout>