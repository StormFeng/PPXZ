<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="11.5dp"
        android:background="@color/white"
        android:paddingRight="21.1dp"
        android:paddingTop="21.1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <midian.baselib.widget.CircleImageView
                android:id="@+id/head_cv"
                android:layout_width="43.2dp"
                android:layout_height="43.2dp"
                android:background="@drawable/head1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="找楼真难"
                    android:textColor="@color/text_bg20"
                    android:textSize="14.4sp"/>

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2.7dp"
                    android:text="2天前"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="34.6dp"
                android:layout_height="19.2dp"
                android:background="#FFF77F7F"
                android:gravity="center"
                android:text="好评"
                android:textColor="@color/white"
                android:textSize="11.5sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21.6dp"
            android:layout_marginTop="3.8dp"
            android:paddingLeft="55dp"
            android:text="今天跟经纪去了这个园区，环境真的很不错，价格也还合理，经纪人不错！准备过两天签合同！"
            android:textColor="@color/text_bg60"
            android:textSize="14.4sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line"/>
</LinearLayout>