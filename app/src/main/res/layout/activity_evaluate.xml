<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="312dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="11.5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="313.9dp"
            android:layout_height="53.8dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18.2dp"
            android:background="#FFFFF8EA"
            android:paddingLeft="12.5dp">
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题：先有鸡还是先有蛋？"
                android:textColor="@color/text_bg66"
                android:textSize="13.4sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015-12-13  9:00"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_bg90"
                android:textSize="12.5sp"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15.4dp"
        android:orientation="horizontal">
        <midian.baselib.widget.CircleImageView
            android:id="@+id/head_cv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="14.4dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:paddingLeft="14.4dp"
            android:paddingRight="18.3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赵默笙"
                    android:textColor="@color/text_bg33"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="创意总监"
                    android:textColor="@color/text_bg33"
                    android:textSize="13.4sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州非设计设计公司"
                android:layout_marginTop="7.1dp"
                android:textColor="@color/text_bg90"
                android:textSize="12.5sp"/>
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="13.4dp"
            android:background="@color/divide_line">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="9.6dp">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="51.8dp"
                android:layout_height="28.8dp"
                android:text="好评"
                android:textColor="@color/white"
                android:background="@drawable/radius_bg_redsolid"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="51.8dp"
                android:layout_height="28.8dp"
                android:text="中评"
                android:layout_marginLeft="19.2dp"
                android:textColor="@color/text_bg90"
                android:background="@drawable/radius_bg_graystroke"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_width="51.8dp"
                android:layout_height="28.8dp"
                android:text="差评"
                android:layout_marginLeft="19.2dp"
                android:textColor="@color/text_bg90"
                android:background="@drawable/radius_bg_graystroke"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_rate"
            android:layout_width="317.8dp"
            android:layout_height="97.9dp"
            android:hint="请填写您对服务达人的点评！"
            android:gravity="start"
            android:paddingTop="7.7dp"
            android:paddingBottom="7.7dp"
            android:paddingLeft="11.5dp"
            android:paddingRight="11.5dp"
            android:textSize="13.4sp"
            android:layout_marginBottom="15.4dp"
            android:background="@drawable/radius_bg_gray_solid_stroke"
            android:textColor="@color/text_bgb0"/>
    </LinearLayout>

    <Button android:id="@+id/btn_Ok"
    android:layout_width="240dp"
    android:layout_height="34.6dp"
    android:text="确认"
    android:layout_marginTop="38.4dp"
    android:textColor="@color/white"
    android:background="@drawable/radius_bg_bluesolid"/>

    <Button
        android:id="@+id/btn_No_Evaluate"
        android:layout_width="wrap_content"
        android:layout_height="34.6dp"
        android:text="稍后评价"
        android:layout_marginTop="14.4dp"
        android:textColor="@color/text_bg90"
        android:textSize="13.4sp"
        android:drawableRight="@drawable/icon_right_arrow"
        android:background="@null"/>
</LinearLayout>