<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <midian.baselib.widget.BaseLibTopbarView
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <midian.baselib.widget.ScrollViewWidthListener
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<include layout="@layout/company_detail_top" />-->

        </midian.baselib.widget.ScrollViewWidthListener>


        <LinearLayout
            android:id="@+id/ll_ask"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:background="#FF51BBFA"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_ask"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:background="#FF51BBFA"
                android:drawableLeft="@drawable/icon_free_ask"
                android:drawablePadding="10.6dp"
                android:gravity="center"
                android:text="咨询会话(免费)"
                android:textColor="@color/white"
                android:textSize="15.4sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>