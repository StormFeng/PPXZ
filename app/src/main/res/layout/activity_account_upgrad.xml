<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.4dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mediation_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/default_button"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:tag="1"
            android:text="客商中介"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line"/>

        <TextView
            android:id="@+id/consultant_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/default_button"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:tag="1"
            android:text="物业顾问"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/proprietor_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/default_button"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:tag="1"
            android:text="业主"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line"/>

        <TextView
            android:id="@+id/got_talent_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/default_button"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:tag="1"
            android:text="服务达人"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line"/>
    </LinearLayout>
</LinearLayout>