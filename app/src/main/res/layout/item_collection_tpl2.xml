<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11.5dp"
        android:paddingTop="13.4dp"
        android:paddingBottom="12.5dp"
        android:paddingRight="12.7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="42.2dp"
            android:layout_height="42.2dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="9.6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21.7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="韩笑笑"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>
                <TextView
                    android:id="@+id/blank"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_bg66"
                    android:textSize="11.5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评率 90%"
                    android:padding="3dp"
                    android:textColor="@color/text_bgb0"
                    android:textSize="11.5sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询次数 2132"
                    android:padding="3dp"
                    android:textColor="@color/text_bgb0"
                    android:layout_marginLeft="12.5dp"
                    android:textSize="11.5sp"/>
            </LinearLayout>
            <midian.baselib.widget.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="wrap_content"
                android:layout_marginTop="9.1dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/rent_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创意总监"
                    android:textSize="12.5sp"
                    android:textColor="#FFE56032"/>
                <TextView
                    android:id="@+id/area_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.9dp"
                    android:gravity="end"
                    android:text="广州创建装修有限公司"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11.5dp"
        android:paddingTop="9.6dp"
        android:paddingBottom="14.5dp"
        android:paddingRight="11.5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="71dp"
            android:layout_height="21.1dp"
            android:background="#FFEEF9FF"
            android:textColor="#FF338ABD"
            android:gravity="center"
            android:text="专长"
            android:textSize="13.4sp"/>
        <TextView
            android:layout_width="71dp"
            android:layout_height="21.1dp"
            android:background="#FFEEF9FF"
            android:textColor="#FF338ABD"
            android:gravity="center"
            android:layout_marginLeft="9.6dp"
            android:text="创意设计"
            android:textSize="13.4sp"/>
        <TextView
            android:layout_width="71dp"
            android:layout_height="21.1dp"
            android:background="#FFEEF9FF"
            android:textColor="#FF338ABD"
            android:gravity="center"
            android:layout_marginLeft="9.6dp"
            android:text="建筑造价"
            android:textSize="13.4sp"/>
        <TextView
            android:layout_width="71dp"
            android:layout_height="21.1dp"
            android:background="#FFEEF9FF"
            android:textColor="#FF338ABD"
            android:gravity="center"
            android:layout_marginLeft="9.6dp"
            android:text="法务资讯"
            android:textSize="13.4sp"/>

    </LinearLayout>
</LinearLayout>